<div id="rolecontainer">
    <h3>@Interface.RoleIndex</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td></td>
                <td>@Interface.RoleName</td>
                <td>@Interface.StartDate</td>
                <td>@Interface.EndDate</td>
                @if (ViewBag.RolesFor == typeof(Group))
                {
                    <td>@Interface.MaxNumberOfUsers</td>
                }
            </tr>
        </thead>
        <tbody ng-repeat="role in getRoles()" ng-cloak>
            <tr>
                <td>
                    <input type="checkbox" ng-model="role.selected" />
                </td>
                <td>
                    <label ng-bind-html="role.name"></label>
                </td>
                <td>
                    <input kendo-date-picker k-ng-model="role.startDate" k-on-change="changeDate(role, 'start')" />
                </td>
                <td>
                    <input kendo-date-picker k-ng-model="role.endDate" k-on-change="changeDate(role, 'end')" />
                </td>
                @if (ViewBag.RolesFor == typeof(Group))
                {
                    <td>
                        <input kendo-numeric-text-box k-min="0" ng-model="role.maxNumberOfUsers" />
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>